<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>io.tchepannou.core</groupId>
        <artifactId>parent-springboot-rest</artifactId>
        <version>1.0.3</version>
    </parent>


    <groupId>io.tchepannou.enigma</groupId>
    <artifactId>oms-service</artifactId>
    <version>1.0.0-SNAPSHOT</version>


    <properties>
        <database.name>oms</database.name>
        <jacoco.threshold.line>0.87</jacoco.threshold.line>
        <jacoco.threshold.class>0.90</jacoco.threshold.class>

        <!-- Library versions - in ALPHABETICAL ORDER-->
        <ferari-client.version>1.0.21</ferari-client.version>
        <ref-data-client.version>1.0.7</ref-data-client.version>
        <oms-client.version>1.0.9</oms-client.version>
        <tontine-client.version>1.0.2</tontine-client.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>io.tchepannou.enigma</groupId>
            <artifactId>oms-client</artifactId>
            <version>${oms-client.version}</version>
        </dependency>
        <dependency>
            <groupId>io.tchepannou.enigma</groupId>
            <artifactId>ferari-client</artifactId>
            <version>${ferari-client.version}</version>
        </dependency>
        <dependency>
            <groupId>io.tchepannou.enigma</groupId>
            <artifactId>ref-data-client</artifactId>
            <version>${ref-data-client.version}</version>
        </dependency>
        <dependency>
            <groupId>io.tchepannou.enigma</groupId>
            <artifactId>tontine-client</artifactId>
            <version>${tontine-client.version}</version>
        </dependency>
    </dependencies>


    <distributionManagement>
        <snapshotRepository>
            <id>io.tchepannou.maven</id>
            <url>s3://io.tchepannou.maven/snapshot</url>
        </snapshotRepository>
        <repository>
            <id>io.tchepannou.maven</id>
            <url>s3://io.tchepannou.maven/release</url>
        </repository>
    </distributionManagement>


    <repositories>
        <repository>
            <id>maven-central</id>
            <url>http://repo1.maven.org/maven2</url>
        </repository>
        <repository>
            <id>oss-jfrog-artifactory</id>
            <name>oss-jfrog-artifactory-releases</name>
            <url>http://oss.jfrog.org/artifactory/oss-release-local</url>
        </repository>
        <repository>
            <id>bintray-readytalk</id>
            <name>bintray readytalk</name>
            <url>http://dl.bintray.com/readytalk/maven</url>
        </repository>
        <repository>
            <id>io.tchepannou.maven</id>
            <url>s3://io.tchepannou.maven/release</url>
        </repository>
    </repositories>

</project>
